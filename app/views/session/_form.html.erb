<%= form_with(url: login_path,scope: :session, local: true) do |form| %>

  <div class="mt-10 mb-5 flex items-center">
    <div class="w-5/12 text-right pr-7"><%= form.label :email %></div>
    <%= form.text_field :email, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2" %>
  </div>

  <div class="mb-5 flex items-center">
    <div class="w-5/12 text-right pr-7"><%= form.label :password %></div>
    <%= form.password_field :password, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2" %>
  </div>

  <div class="inline-block mb-5">
      <%= form.submit "Log in", class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer hover:bg-blue-800" %>
  </div>
<% end %>
